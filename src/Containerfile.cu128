FROM docker.io/ubuntu:24.04

USER root

RUN set -exu \
  && export DEBIAN_FRONTEND=noninteractive \
  && apt-get -yq update \
  && apt-get -yq install \
    bash \
    curl \
    nano \
    wget \
    git \
    python3 \
    python3-full \
    python3-venv \
    python3-pip \
    libgl1 \
    libglib2.0-0 \
    libtcmalloc-minimal4 \
    bc \
    pciutils \
  && apt-get -yq clean

RUN set -exu \
  && addgroup \
    --gid 1101 \
    comfyui \
  && adduser \
    --uid 1101 \
    --ingroup comfyui \
    --disabled-password \
    --gecos comfyui \
    comfyui

# comfyui repo assumed to have been cloned for us
COPY --chown=comfyui:comfyui ./comfyui /home/comfyui/comfyui
COPY ./entrypoint.sh /home/comfyui/entrypoint.sh

USER comfyui
WORKDIR /home/comfyui/comfyui

RUN set -exu \
  && export DEBIAN_FRONTEND=noninteractive \
  && python3 -m venv /home/comfyui/comfyui \
  && . /home/comfyui/comfyui/bin/activate \
  && pip install --pre \
      torch \
      torchvision \
      torchaudio \
      --index-url https://download.pytorch.org/whl/nightly/cu128 \
  && pip install -r \
      requirements.txt

WORKDIR /home/comfyui


ENTRYPOINT ["/bin/bash"]
CMD ["/home/comfyui/entrypoint.sh"]
